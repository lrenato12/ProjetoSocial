@model ProjetoSocial.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    @*<label for="inputEmail" class="sr-only">Email address</label>*@
    @*<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>*@
    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Usuário", autofocus = true } })
    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })

    @*<label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>*@
    @Html.PasswordFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control sr-only", placeholder = "Senha", autofocus = true } })
    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Lembrar-me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2018</p>
}