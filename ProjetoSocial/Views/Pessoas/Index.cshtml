@model IEnumerable<ProjetoSocial.Models.Pessoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}


<h2>Lista de animais</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Data Inclusão</th>
            <th>Animais adotados</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Usuario</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInclusao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimaisAdotados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco1.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contato1.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login1.Usuario)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

           